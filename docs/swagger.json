                      "type": "object",
                      "required": [
                        "date",
                        "dailyProgress",
                        "waters"
                      ],
                      "properties": {
                        "date": {
                          "type": "string",
                          "example": "2024-08-03"
                        },
                        "dailyProgress": {
                          "type": "number",
                          "example": 100
                        },
                        "waters": {
                          "type": "array",
